class Solution(object):
    def mergeTwoLists1(self, l1, l2):
        if l1 == None:
            return l2
        if l2 == None:
            return l1
            
        if l1.val <= l2.val:
            head = l1 
            head.next = self.mergeTwoLists(l1.next, l2)
        else:
            head = l2
            head.next = self.mergeTwoLists(l1, l2.next)
        
        return head 

         
        
        # iteratively
    def mergeTwoLists1(self, l1, l2):
        dummy = cur = ListNode(0)
        while l1 and l2:
            if l1.val < l2.val:
                cur.next = l1
                l1 = l1.next
            else:
                cur.next = l2
                l2 = l2.next
            cur = cur.next
            cur.next = l1 or l2
        return dummy.next
